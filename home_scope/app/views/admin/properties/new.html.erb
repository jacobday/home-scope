<h1>New Property</h1>

<%= form_with model: @property, url: admin_properties_path do |form| %>
  <%= form.label :status %>
  <%= form.select :status, [['For Sale'],['Pending'],['Off Market']] %>

  <%= form.label :price %>
  <%= form.text_field :price %>

  <%= form.label :Street %>
  <%= form.text_field :address1 %>

  <%= form.label "City, State, ZIP" %>
  <%= form.text_field :address2 %>

  <%= form.label "Image URL" %>
  <%= form.text_field :image %>

  <%= form.submit "Create Property" %>
<% end %>

<%= link_to "Back to List", admin_properties_path %>
